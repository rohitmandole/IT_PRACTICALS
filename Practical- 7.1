<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>String Functions</title>
</head>
<body>
    <form name="frm1">
        Enter Your Name:
        <input type="text" name="t1"><br><br>
        <input type="button" name="btncheck" value="Count Vowels" onClick="cnt()">
    </form>

    <script type="text/javascript">
        function cnt() {
            var s, i, ch, c;
            c = 0;
            s = document.frm1.t1.value; // Fix: access the text input correctly
            for (i = 0; i < s.length; i++) { // Fix: use i < s.length for proper iteration
                ch = s.charAt(i);
                if (ch == "A" || ch == "a" || ch == "E" || ch == "e" || ch == "I" || ch == "i" || ch == "O" || ch == "o" || ch == "U" || ch == "u") {
                    c++;
                }
            }
            alert("Number of Vowels in String are: " + c);
        }
    </script>
</body>
</html>
